{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "func-names": 0,
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": ["state"]
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["@", "fixtures", "mocks"]
      }
    ]
  }
}
